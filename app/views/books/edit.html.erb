<h1>Books#edit</h1>
<h1 class="edit-heading">Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation" class="error-message">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="error-message-each"><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <table>
    <tbody>
      <tr>
        <td>
          <label for="book_title" class="always-apply <%= 'label-error' if @book.errors[:title].present? %>">Title</label><br>
          <%= f.text_field :title, class: ("field-with-errors" if @book.errors[:title].present?) %>
        </td>
      </tr>
      <tr>
        <td>
          <label for="book_body" class="always-apply <%= 'label-error' if @book.errors[:body].present? %>">Opinion</label><br>
          <%= f.text_area :body, class: ("field-with-errors" if @book.errors[:body].present?) %>
        </td>
      </tr>
      <tr>
        <td><%= f.submit 'Update Book' %></td>
      </tr>
    </tbody>
  </table>
<% end %>
<tr>
  <td colspan="2">
    <%= link_to 'Show', book_path, class: "link-class" %> |
    <%= link_to 'Back', books_path, class: "link-class" %>
  </td>
</tr>
