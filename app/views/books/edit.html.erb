<div class="container">
  <div class="row mt-3">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <div id="error_explanation" class="error-message">
          <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li class="error-message-each"><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :Title, "Title", class: "control-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion, "Opinion", class: "control-label" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <td><%= f.submit 'Update Book', class: "btn btn-success" %></td>
        </div>
      <% end %>
        <div class="form-group">
          <%= link_to 'Show', book_path, class: "link-class" %> |
          <%= link_to 'Back', books_path, class: "link-class" %>
        </div>
    </div>
  </div>
</div>