<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User Info</h2>
        <table>
          <thread>
                <tr>
                  <th><%= image_tag current_user.image.variant(resize: "100x100!") if current_user.image.attached? %></th>
                </tr>
          </thread>
          <tbody>
            <tr>
              <th>name</th>
              <td><%= current_user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= current_user.introduction %></td>
            </tr>
          </tbody>
        </table>
        <%= link_to "users/:id/edit", class: "btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
        <h2>New Book</h2>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
    </div>

